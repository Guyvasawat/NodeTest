<%- include('header',{
    title:'Login'
}); -%>

<div class="container">
    <h1>Login</h1>
    <form action="" method="POST">
        <label for="user_email">Email</label>
        <input type="email" class="input" name="_email" id="user_email" placeholder="Enter your email">
        <label for="user_pass">Password</label>
        <input type="password" class="input" name="_password" id="user_pass" placeholder="Enter your password">
        <% if(typeof error !== 'undefined'){ %>
        <div class="err-msg"><%= error %></div><% } %>
        <input type="submit" value="Login">


        <div class="text-center">
          <div class="col">
            <p>Not a member? <a href="./signup">Sign Up</a></p>
           
          </div>
        </div>

  <div class="text-center">
    <div class="col">
      <p><a href="/resetpassword">Forgot password?</a></p>
  </div>
</div>

<div class="text-center">
   <a href="/auth/facebook" class="btn btn-primary facebook"><i class="fab fa-facebook-f"></i> Login with Facebook </a>
</div>
    </form>
</div>

<%- include('footer'); -%>